<v-card height="100%">
  <v-card-title primary-title>
    <div>
      <h3 class="headline md-o">
        Resumo mensal
      </h3>
      <div>Lan√ßamentos a partir de <strong><%= DateTime.current.at_beginning_of_month.strftime('%d/%m/%Y') %></strong></div>
    </div>
  </v-card-title>
  <v-container fluid grid-list-lg>
    <v-layout row wrap>
      <v-flex xs12>
        <v-card color="primary white--text">
          <v-card-title class="pb-0">
            <div class="title">Saldo</div>
          </v-card-title>
          <monthly-balance
            class="text-xs-center headline"
            userid="<%= current_user.id %>"
            :reload="reloadBalance">
          </monthly-balance>
        </v-card>
      </v-flex>
      <v-flex xs12 sm6>
        <v-card color="primary white--text">
          <v-card-title class="pb-0">
            <div class="title">Receitas</div>
          </v-card-title>
          <monthly-expense
            class="text-xs-center headline"
            userid="<%= current_user.id %>"
            :reload="reloadBalance">
          </monthly-expense>
        </v-card>
      </v-flex>
      <v-flex xs12 sm6>
        <v-card color="primary white--text">
          <v-card-title class="pb-0">
            <div class="title">Despesas</div>
          </v-card-title>
          <monthly-revenue
            class="text-xs-center headline"
            userid="<%= current_user.id %>"
            :reload="reloadBalance">
          </monthly-revenue>
        </v-card>
      </v-flex>
    </v-layout>
  </v-container>
</v-card>

<v-card height="100%">
  <v-card-title primary-title>
    <div>
      <h3 class="headline md-o">
        Entradas por envelope
      </h3>
      <div>Lan√ßamentos a partir de <strong><%= DateTime.current.at_beginning_of_month.strftime('%d/%m/%Y') %></strong></div>
    </div>
  </v-card-title>
  <v-layout row wrap>
    <v-flex xs12 sm6>
      <v-card flat>
        <v-card-title class="pb-0">
          <div class="title">Receitas</div>
        </v-card-title>
        <by-category
          chartid="revenues-by-category"
          :data="<%= @data_revenue %>">
        </by-category>
      </v-card>
    </v-flex>
    <v-flex xs12 sm6>
      <v-card flat>
        <v-card-title class="pb-0">
          <div class="title">Despesas</div>
        </v-card-title>
        <by-category
          chartid="expenses-by-category"
          :data="<%= @data_expense %>">
        </by-category>
      </v-card>
    </v-flex>
  </v-layout>
</v-card>
<%= content_for :google_chart do %>
  <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<% end %>

<%= content_for :title do %>
  <div class="col s12">
    <h2>Receitas</h2>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Valor</th>
      <th>Data</th>
    </tr>
  </thead>

  <tbody>
    <% @revenues.each do |revenue| %>
      <tr>
        <%= content_tag(:td, revenue.description) %>
        <%= content_tag(:td, number_to_currency(revenue.amount)) %>
        <%= content_tag(:td, revenue.made_at.strftime('%d/%m/%Y')) %>
      </tr>
    <% end %>
  </tbody>
</table>

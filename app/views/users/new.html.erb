<h1>Sign up</h1>

<%= form_for @user do |f| %>
    <% if @user.errors.any? %>
        <div class="error_messages">
            <h2>The form has some irregularities</h2>
            <ul>
                <% @user.errors.full_messages.each do |message| %>
                    <%= content_tag :li, message %>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="field">
        <%= f.label :username, autofocus: true %><br>
        <%= f.text_field :username %>
    </div>

    <div class="field">
        <%= f.label :email %><br>
        <%= f.text_field :email %>
    </div>

    <div class="field">
        <%= f.label :password %><br>
        <%= f.password_field :password %>
    </div>

    <div class="field">
        <%= f.label :password_confirmation %><br>
        <%= f.password_field :password_confirmation %>
    </div>
    <div class="actions">
        <%= f.submit 'Sign up' %>
    </div>
<% end %>
